{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@shopify/esnext",
    "plugin:@shopify/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "no-console": 0,
    "no-empty": 0,
    "no-irregular-whitespace": 0,
    "no-extra-semi": 2,
    "prettier/prettier": 0,
    "object-curly-spacing": 0,
    "no-process-env": 0,
    "no-unused-vars": 0,
    "eol-last": 0,
    "arrow-parens": 0,
    "require-await": 0,
    "comma-dangle": 0,
    "no-trailing-spaces": 0
  }
}
