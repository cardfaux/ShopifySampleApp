{
  "env": {
    "browser": true,
    "es2020": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@shopify/esnext",
    "plugin:@shopify/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "no-console": 0,
    "no-empty": 0,
    "no-irregular-whitespace": 0,
    "no-extra-semi": 2,
    "prettier/prettier": 0,
    "no-process-env": 0,
    "no-unused-vars": 0,
    "eol-last": 0,
    "arrow-parens": 0,
    "require-await": 0,
    "comma-dangle": 0,
    "no-trailing-spaces": 0,
    "babel/object-curly-spacing": 0,
    "space-in-parens": 1,
    "promise/catch-or-return": 0,
    "require-atomic-updates": 0,
    "react/jsx-fragments": 0,
    "import/no-extraneous-dependencies": 0,
    "import/order": 0,
    "@shopify/jsx-no-complex-expressions": 0,
    "@shopify/binary-assignment-parens": 0,
    "@shopify/jsx-no-hardcoded-content": 0
  }
}
